{{>nav}}
<div class="container">

  <div class="row">
    <div class="col-sm-3">
      <!-- Search form -->
      <form class="form">
        <div class="input-group  mt-4">
          <input type="text" class="form-control" placeholder="Buscar">
          <div class="input-group-btn">
            <button class="btn btn-primary" type="submit">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
      </form>

    </div>
  </div>



  <div class="row">
    <div class="col-sm-10">
      <h6 class="font-weight-bolder mt-4"> Expedientes </h6>


      <table class="table table-sm table-hover tableBodyScroll">
        <thead class="thead-dark">
          <tr>
            <th style="width: 15px;">Id</th>
            <th style="width: 54px;">Expediente</th>
            <th style="width: 160px;">Caratula</th>
            <th style="width: 260px;">Comentario</th>
          </tr>
        </thead>
        <tbody>
          {{#each rows}}
          <tr>
            <th style="width: 40px;">{{id}} </th>
            <td style="width: 120px;">{{expediente}} </td>
            <td style="width: 120px;">{{caratula}}</td>
            <td style="width: 420px;">{{nota}}</td>

            <td> <a class="btn btn-sm btn-success  " href="/video?expte={{id}} "  " style="font-size:7px "> <i
                                    class="fa  fa-play  "  ></i> </a> </td>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>


</div>