{{>nav}}
<div class="container">

    <!-- Search form -->
    <div class="row">
        <div class="col-sm-3">
            <form class="form" method="get" action="mantenimiento">
                <div class="input-group  mt-4">
                    <input type="text" class="form-control" placeholder="Buscar" name="buscar">
                    <div class="input-group-btn">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </div>


    <!-- EXPEDIENTES -->


    <div class="row">
        <div class="col-sm-10">


            <div class="d-flex">
                <div class="mr-auto ">
                    <h6 class="font-weight-bolder p-2 mt-4 mb-0 "
                        style="background-color: lightskyblue; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                        Expedientes </h6>
                </div>
                <div>
                    <a class="btn btn-sm btn-success p-1 mt-4 mb-0 " href="/modifyexpediente"><i
                            class="fa fa-fw fa-plus " title="Agregar un Expediente Nuevo"></i></a>
                </div>
            </div>

            <table class="table table-sm table-hover tableBodyScroll">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 7%;">Id</th>
                        <th style="width: 17%;">Expediente</th>
                        <th style="width: 25%;">Caratula</th>
                        <th style="width: 35%;">Comentario</th>
                    </tr>
                </thead>
                <tbody style="background-color: honeydew;">
                    {{#each rows}}
                    <tr>
                        <th style="width: 10%;">{{id}} </th>
                        <td style="width: 20%;">{{expediente}} </td>
                        <td style="width: 30%;">{{caratula}}</td>
                        <td style="width: 30%;">{{nota}}</td>

                        <td style="width: 80px;">
                            <a href="/modifyexpediente?id={{id}}" title="Modificar Expediente"><i class="fa fa-fw fa-edit"></i></a>
                            <a href="/delexpediente?id={{id}}"
                                onclick="if (confirm('Borra el Usuario seleccionado?')){return true;}else{event.stopPropagation(); event.preventDefault();};"
                                title="Borrar Expediente"><i class="fa fa-fw fa-remove "></i></a>
                            <a href="/abmvideo?id={{id}}" title="Ver Videos del Expediente"><i class="fa fa-fw fa-play"></i></a>
                        </td>

                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>



</div>